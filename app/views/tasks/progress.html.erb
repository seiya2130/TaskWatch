<section class="container">
    <h3 class="mt-3">
        進行中タスク : <span id="count"><%= @task_lists.count %></span>
    </h3>
    <div class="text-center">
        <button onclick="OnButtonClick();" id="btn" class="btn standard">カウントダウン表示</button>
    </div>
    <table class="mt-3">        
        <tr class="border-bottom">
            <th>タスクリスト名</th>
            <th>タスク名</th>
            <th>期限</th>
        </tr>
        <% @task_lists.each_with_index do |task,i| %>
            <tr class="border-bottom">
                <td class="my-3 py-3"><%= link_to task.task_list.name, "/task_lists/show/#{task.task_list_id}" %> </td>
                <td class="my-3 py-3"><%= link_to task.name, "/tasks/#{task.id}" %></td>
                <td class="my-3 py-3">
                    <span id="<%= i %>" class="">
                        <%= convert_date(task.dead_line) %>
                    </span>
                    <span id="<%= "timer" + i.to_s %>" class="none">
                    </span>
                </td>
            </tr>
        <% end %>
    </table>
</section>
    
