<section class="container">
    <% if exist_task_list? %>
        <h3 class="mt-3">
            <%= @task_list.name %>    
        </h3>
        <div class="text-center">
            <%= link_to "タスク作成", new_task_list_task_path(@task_list), class: "btn standard" %>   
        </div>
        <table class="mt-3">        
            <tr class="border-bottom">
                <th>タスク名</th>
                <th>状態</th>
                <th>期限</th>
                <th></th>
            </tr>
            <% if exist_task? %>
                <% @tasks.each do |task| %>
                    <tr class="border-bottom">
                        <td class="my-3 py-3"><%= link_to task.name, edit_task_path(task) %></td>
                        <td class="my-3 py-3"><%= convert_status(task.status) %></td>
                        <td class="my-3 py-3"><%= convert_date(task.dead_line) %></td>
                        <td class="my-3 py-3"><%= link_to "削除", task_path(task), method: 'delete', class: "btn delete" %></td>
                    </tr>
                <% end %>
            <% end %>
        </table>
    <% end %>
</section>
