<section class="container">
    <% if flash[:danger]%>
        <div class="msg error my-3">
            <%= flash[:danger] %>
        </div>
    <% end %>
    <div class="text-center my-3">  
        <%= link_to "タスクリスト作成", new_task_list_path, class: "btn standard" %>   
    </div>
    <div>
        <% @task_lists.each do |task_list| %>
        <div class="d-flex justify-content-between py-3 border-bottom">
            <div>
                <%= link_to "#{task_list.name}", task_list_path(task_list) %>
            </div>
            <div>
                <%= link_to "編集", edit_task_list_path(task_list), class: "btn standard" %>
                <%= link_to "削除", task_list_path(task_list), method: 'delete', class: "btn delete" %>
            </div>
        </div>
    <% end %>
    </div>
</section>
