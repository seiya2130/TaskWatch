<section class="container">
    <% @task_list.errors.full_messages.each do |message| %>
        <div class="msg error my-3">
            <%= message %>
        </div>    
    <% end %>
    <div class="text-center my-3 py-3">
        <p>タスクリスト名を編集してください</p>
        <%= form_for(@task_list) do |f| %>
            <div class="my-3">
                <%= f.text_field :name , class:"form w-50" %>
            </div>
            <%= f.submit '作成', class: "btn standard mt-3" %>
        <% end %>
    </div>
</section>