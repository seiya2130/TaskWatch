<header class="py-3 bg-header">
    <div class="container d-flex justify-content-between">
        <div>
            <div>
                <%= link_to "TaskWatch", "/" , class: "header-text text-white"%> 
            </div>
        </div>
        <div class="d-flex">
            <% if logged_in? %>
            <div class="mx-3">
                <%= link_to "#{@current_user.name}", "/users/#{@current_user.id}", class: "text-white" %> 
            </div>
            <div class="mx-3">
                <%= link_to "進行中タスク一覧", "/tasks/progress", class: "text-white" %> 
            </div>
            <div class="mx-3">
                <%= link_to "タスクリスト一覧", "/task_lists/index", class: "text-white" %> 
            </div>
            <div class="mx-3">
                <%= link_to "ログアウト", logout_path, class:"text-white", method: :delete %>
            </div>
            <% else %>
                <div class="mx-3">
                <%= link_to "ログイン", login_path, class:"text-white" %>
            </div>
            <div class="mx-3">
                <%= link_to "新規登録", signup_path, class:"text-white" %>
            </div>
            <% end %>
            
        </div>
    </div>
</header>